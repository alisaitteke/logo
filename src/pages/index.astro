---
// Logo CDN Homepage
const baseUrl = import.meta.env.BASE_URL || Astro.url.origin;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Logo CDN - Simple Logo Delivery Service</title>
		<meta name="description" content="Get company logos instantly via simple API. Support for domain and company name lookups with format, size, and greyscale options." />
	</head>
	<body class="min-h-screen bg-gray-50 dark:bg-gray-900">
		<!-- Main Content -->
		<main class="container mx-auto px-4 py-8 max-w-2xl">
			<header class="mb-8 text-center">
				<h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">Logo CDN</h1>
				<p class="text-gray-600 dark:text-gray-300" id="subtitle">Simple logo delivery service</p>
			</header>

			<!-- Loading State -->
			<div id="loading" class="text-center py-8">
				<div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
				<p class="mt-2 text-gray-600 dark:text-gray-400">Loading...</p>
			</div>

			<!-- Authenticated View (API Keys) -->
			<div id="authenticated-view" class="hidden">
				<!-- API Keys -->
				<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
					<div class="flex justify-between items-center mb-4">
						<h2 class="text-2xl font-semibold text-gray-800 dark:text-white">Your API Key</h2>
						<button id="logout-btn" class="text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">Logout</button>
					</div>
					<p class="text-gray-600 dark:text-gray-300 mb-4" id="user-email"></p>
					<div id="api-keys-list" class="space-y-4"></div>
				</div>
			</div>

			<!-- Unauthenticated View (Send Magic Link) -->
			<div id="unauthenticated-view" class="hidden">
				<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-8 ">
					<h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">Get Your API Key</h2>

					<!-- Form -->
					<div id="magic-link-form-container">
						<p class="text-gray-600 dark:text-gray-300 mb-4">Enter your email to receive a magic link with your API key</p>
						<form id="request-key-form" class="space-y-4">
							<div>
								<label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
									Email Address
								</label>
								<input
									type="email"
									id="email"
									name="email"
									required
									class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
									placeholder="your@email.com"
								/>
							</div>
							<button
								type="submit"
								id="submit-btn"
								class="w-full bg-blue-600 dark:bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors flex items-center justify-center"
							>
								<span id="submit-text">Send Magic Link</span>
								<svg id="submit-loader" class="hidden animate-spin ml-2 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
									<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
									<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
								</svg>
							</button>
						</form>
						<div id="request-key-message" class="mt-3 text-sm"></div>
					</div>

					<!-- Success Message -->
					<div id="success-message-container" class="hidden">
						<div class="text-center py-8">
							<div class="mb-4">
								<svg class="mx-auto h-16 w-16 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">Check Your Email!</h3>
							<p class="text-gray-600 dark:text-gray-300 mb-4">
								We've sent a magic link to <strong id="sent-email" class="text-gray-900 dark:text-white"></strong>
							</p>
							<p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
								Click the link in the email to access your API key.
			</p>
							<p class="text-xs text-gray-400 dark:text-gray-500">
								‚ö†Ô∏è Don't forget to check your spam folder if you don't see the email within a few minutes.
							</p>
							<button
								onclick="document.getElementById('success-message-container').classList.add('hidden'); document.getElementById('magic-link-form-container').classList.remove('hidden');"
								class="mt-6 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
							>
								Send to a different email
							</button>
						</div>
					</div>
				</div>

			</div>
		</main>

		<script>
			// Debounce timer
			let debounceTimer: number | null = null;

			// Update preview and examples
			(window as any).updatePreview = function() {
				const searchInput = document.getElementById('logo-search') as HTMLInputElement;
				const sizeSelect = document.getElementById('size-select') as HTMLSelectElement;
				const formatSelect = document.getElementById('format-select') as HTMLSelectElement;
				const greyscaleCheck = document.getElementById('greyscale-check') as HTMLInputElement;
				const previewImg = document.getElementById('preview-img') as HTMLImageElement;
				const previewLoader = document.getElementById('preview-loader');
				const urlExample = document.getElementById('url-example');
				const htmlExample = document.getElementById('html-example');

				const query = searchInput?.value.trim() || 'peta uk';
				const size = sizeSelect?.value || '256';
				const format = formatSelect?.value || 'png';
				const greyscale = greyscaleCheck?.checked || false;

				// Get API key
				const apiKeyEl = document.querySelector('#api-keys-list .font-mono');
				const apiKey = apiKeyEl?.textContent?.trim() || '';

				const baseUrl = window.location.origin;

				// Build URL with parameters
				let url = `${baseUrl}/get?s=${query}&key=${apiKey}`;
				if (size !== '256') url += `&size=${size}`;
				if (format !== 'png') url += `&format=${format}`;
				if (greyscale) url += `&greyscale=true`;

				// Show loader
				if (previewLoader) previewLoader.classList.remove('hidden');

				// Update preview
				if (previewImg) {
					const previewError = document.getElementById('preview-error');

					previewImg.onload = () => {
						if (previewLoader) previewLoader.classList.add('hidden');
						if (previewError) previewError.classList.add('hidden');
					};
					previewImg.onerror = () => {
						if (previewLoader) previewLoader.classList.add('hidden');
						if (previewError) previewError.classList.remove('hidden');
					};

					// Reset error state before loading
					if (previewError) previewError.classList.add('hidden');

					previewImg.src = url;
					previewImg.style.maxHeight = `${size}px`;
				}

				// Update URL example
				if (urlExample) {
					urlExample.textContent = url;
				}

				// Update HTML example
				if (htmlExample) {
					const htmlCode = `<img src="${url}" alt="Logo" />`;
					htmlExample.textContent = htmlCode;
				}
			};

			// Copy text to clipboard
			(window as any).copyText = function(text: string, button: HTMLButtonElement) {
				navigator.clipboard.writeText(text).then(() => {
					const originalText = button.textContent;
					button.textContent = '‚úì Copied!';
					button.classList.add('bg-green-600', 'dark:bg-green-500');
					button.classList.remove('bg-blue-600', 'dark:bg-blue-500');

					setTimeout(() => {
						button.textContent = originalText;
						button.classList.remove('bg-green-600', 'dark:bg-green-500');
						button.classList.add('bg-blue-600', 'dark:bg-blue-500');
					}, 2000);
				});
			};

			// Copy HTML to clipboard
			(window as any).copyHtml = function(codeEl: HTMLElement, button: HTMLButtonElement) {
				const text = codeEl.textContent || '';
				(window as any).copyText(text, button);
			};

			// Check authentication status on page load
			async function checkAuth() {
				const loading = document.getElementById('loading');
				const authenticatedView = document.getElementById('authenticated-view');
				const unauthenticatedView = document.getElementById('unauthenticated-view');
				const subtitle = document.getElementById('subtitle');

				try {
					const response = await fetch('/api/dashboard-data', {
						credentials: 'include'
					});
					const data = await response.json();

					if (loading) loading.classList.add('hidden');

					if (data.authenticated && data.apiKeys) {
						// Show authenticated view
						if (authenticatedView) authenticatedView.classList.remove('hidden');
						if (unauthenticatedView) unauthenticatedView.classList.add('hidden');
						if (subtitle) subtitle.textContent = `Welcome back!`;

						// Set email
						const emailEl = document.getElementById('user-email');
						if (emailEl) emailEl.textContent = `Email: ${data.email}`;

						// Render API keys
						renderApiKeys(data.apiKeys, data.statistics);

						// Setup event listeners after rendering
						setTimeout(() => {
							setupEventListeners();
						}, 100);
					} else {
						// Show unauthenticated view
						if (authenticatedView) authenticatedView.classList.add('hidden');
						if (unauthenticatedView) unauthenticatedView.classList.remove('hidden');
					}
				} catch (error) {
					console.error('Auth check error:', error);
					if (loading) loading.classList.add('hidden');
					if (authenticatedView) authenticatedView.classList.add('hidden');
					if (unauthenticatedView) unauthenticatedView.classList.remove('hidden');
				}
			}

			// Setup event listeners
			function setupEventListeners() {
				const logoSearch = document.getElementById('logo-search');
				const sizeSelect = document.getElementById('size-select');
				const formatSelect = document.getElementById('format-select');
				const greyscaleCheck = document.getElementById('greyscale-check');

				if (logoSearch) {
					logoSearch.addEventListener('input', () => {
						// Show loader immediately
						const previewLoader = document.getElementById('preview-loader');
						if (previewLoader) previewLoader.classList.remove('hidden');

						// Clear existing timer
						if (debounceTimer) {
							clearTimeout(debounceTimer);
						}

						// Set new timer - wait 600ms before updating
						debounceTimer = setTimeout(() => {
							(window as any).updatePreview();
						}, 600) as any;
					});
				}

				if (sizeSelect) {
					sizeSelect.addEventListener('change', () => {
						(window as any).updatePreview();
					});
				}

				if (formatSelect) {
					formatSelect.addEventListener('change', () => {
						(window as any).updatePreview();
					});
				}

				if (greyscaleCheck) {
					greyscaleCheck.addEventListener('change', () => {
						(window as any).updatePreview();
					});
				}
			}

			// Switch between URL and HTML format
			(window as any).switchFormat = function(format: string) {
				currentFormat = format;

				const urlBtn = document.getElementById('format-url');
				const htmlBtn = document.getElementById('format-html');
				const codes = document.querySelectorAll('#examples-container code');

				if (format === 'url') {
					urlBtn?.classList.add('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					urlBtn?.classList.remove('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
					htmlBtn?.classList.remove('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					htmlBtn?.classList.add('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');

					codes.forEach((code) => {
						const url = code.getAttribute('data-url');
						if (url) code.textContent = url;
					});
				} else {
					htmlBtn?.classList.add('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					htmlBtn?.classList.remove('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
					urlBtn?.classList.remove('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					urlBtn?.classList.add('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');

					codes.forEach((code) => {
						const html = code.getAttribute('data-html');
						// Show HTML as text, not render it
						if (html) code.textContent = html.replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&quot;/g, '"');
					});
				}
			};

			// Copy code to clipboard
			(window as any).copyCode = function(button: HTMLButtonElement) {
				const codeEl = button.previousElementSibling as HTMLElement;
				const textToCopy = currentFormat === 'url'
					? codeEl.getAttribute('data-url')
					: codeEl.getAttribute('data-html');

				if (!textToCopy) return;

				// Decode HTML entities if in HTML mode
				const finalText = currentFormat === 'html' ? textToCopy.replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&quot;/g, '"') : textToCopy;

				navigator.clipboard.writeText(finalText).then(() => {
					const originalText = button.textContent;
					button.textContent = '‚úì Copied!';
					button.classList.add('bg-green-600', 'dark:bg-green-500');
					button.classList.remove('bg-blue-600', 'dark:bg-blue-500');

					setTimeout(() => {
						button.textContent = originalText;
						button.classList.remove('bg-green-600', 'dark:bg-green-500');
						button.classList.add('bg-blue-600', 'dark:bg-blue-500');
					}, 2000);
				});
			};

			// Update examples based on search
			(window as any).updateExamples = function(query: string) {
				const codes = document.querySelectorAll('#examples-container code');
				const images = document.querySelectorAll('#examples-container img');

				codes.forEach((code, index) => {
					let urlAttr = code.getAttribute('data-url') || '';
					let htmlAttr = code.getAttribute('data-html') || '';

					// Replace s= parameter value: s=peta or s=peta -> s=query
					const newUrl = urlAttr.replace(/s=[^&]+/g, `s=${query}`);
					const newHtml = htmlAttr.replace(/s=[^&"]+/g, `s=${query}`);

					code.setAttribute('data-url', newUrl);
					code.setAttribute('data-html', newHtml);

					// Update displayed text based on current format
					if (currentFormat === 'url') {
						code.textContent = newUrl;
					} else {
						// Show HTML as text, not render it
						code.textContent = newHtml.replace(/&lt;/g, '<').replace(/&gt;/g, '>').replace(/&quot;/g, '"');
					}

					// Update image src
					const img = images[index] as HTMLImageElement;
					if (img) {
						img.src = newUrl;
					}
				});
			};

			// Render API keys
			function renderApiKeys(apiKeys: any[], statistics: Record<string, any>) {
				const apiKeysList = document.getElementById('api-keys-list');
				if (!apiKeysList) return;

				apiKeysList.innerHTML = apiKeys.map((keyData) => {
					const stats = statistics[keyData.key] || {};
					const createdAt = new Date(keyData.createdAt).toLocaleDateString('tr-TR');
					const lastUsed = keyData.lastUsed ? new Date(keyData.lastUsed).toLocaleDateString('tr-TR') : 'Never';

					return `
						<div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 border border-gray-200 dark:border-gray-600">
							<div class="mb-3">
								<h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-2">API Key</h3>
								<div class="bg-white dark:bg-gray-800 p-3 rounded-md font-mono text-sm break-all border border-gray-300 dark:border-gray-600 text-gray-900 dark:text-gray-100">
									${keyData.key}
								</div>
								<button 
									onclick="copyToClipboard('${keyData.key}')" 
									class="mt-2 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300"
								>
									üìã Copy to Clipboard
								</button>
							</div>
							<div class="grid grid-cols-2 gap-4">
								<div>
									<p class="text-sm text-gray-600 dark:text-gray-400">Created</p>
									<p class="font-medium text-gray-900 dark:text-white">${createdAt}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600 dark:text-gray-400">Last Used</p>
									<p class="font-medium text-gray-900 dark:text-white">${lastUsed}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600 dark:text-gray-400">Today's Requests</p>
									<p class="font-medium text-gray-900 dark:text-white">${stats.todayRequests || 0}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600 dark:text-gray-400">Total Requests</p>
									<p class="font-medium text-gray-900 dark:text-white">${stats.totalRequests || 0}</p>
								</div>
							</div>
						</div>
					`;
				}).join('');

				// Add usage examples with preview images
				if (apiKeys.length > 0) {
					const apiKey = apiKeys[0]?.key || 'YOUR_API_KEY';
					const baseUrl = window.location.origin;

					apiKeysList.innerHTML += `
						<div class="mt-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6">
							<!-- Controls -->
							<!-- Search Input (Full Width) -->
							<div class="mb-4">
								<label for="logo-search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
									Domain / Company
								</label>
								<input
									type="text"
									id="logo-search"
									placeholder="e.g., apple.com or apple"
									value="peta uk"
									class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm"
								/>
							</div>

							<!-- Other Controls -->
							<div class="grid grid-cols-3 gap-4 mb-4">
								<!-- Size Selector -->
								<div>
									<label for="size-select" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
										Size
									</label>
									<select
										id="size-select"
										class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm"
									>
										<option value="64">64px</option>
										<option value="128">128px</option>
										<option value="256" selected>256px</option>
										<option value="512">512px</option>
									</select>
								</div>

								<!-- Format Selector -->
								<div>
									<label for="format-select" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
										Format
									</label>
									<select
										id="format-select"
										class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm"
									>
										<option value="png" selected>PNG</option>
										<option value="svg">SVG</option>
										<option value="webp">WebP</option>
										<option value="jpeg">JPEG</option>
									</select>
								</div>

								<!-- Greyscale Checkbox -->
								<div>
									<label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
										Options
									</label>
									<div class="flex items-center h-[38px]">
										<input
											type="checkbox"
											id="greyscale-check"
											class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
										/>
										<label for="greyscale-check" class="ml-2 text-sm text-gray-700 dark:text-gray-300">
											Greyscale
										</label>
									</div>
								</div>
							</div>

							<!-- Preview -->
							<div class="mb-4 pb-4 border-b border-blue-200 dark:border-blue-800">
								<p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Preview:</p>
								<div class="relative flex justify-center items-center bg-white dark:bg-gray-700 rounded-lg p-8 min-h-[400px]">
									<div id="preview-loader" class="hidden absolute inset-0 flex items-center justify-center bg-white/80 dark:bg-gray-700/80 rounded-lg">
										<div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
									</div>
									<div id="preview-error" class="hidden absolute inset-0 flex flex-col items-center justify-center bg-white/90 dark:bg-gray-700/90 rounded-lg">
										<svg class="w-16 h-16 text-gray-400 dark:text-gray-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										<p class="text-gray-600 dark:text-gray-400 text-sm">Logo not found</p>
									</div>
									<img id="preview-img" src="${baseUrl}/get?s=peta uk&key=${apiKey}" alt="Logo preview" class="max-w-full" style="max-height: 256px;" />
								</div>
							</div>

							<!-- Examples -->
							<div>
								<h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">Usage Examples</h3>
								
								<!-- URL Example -->
								<div class="mb-3">
									<p class="text-xs text-gray-600 dark:text-gray-400 mb-1">URL:</p>
									<div class="relative">
										<code id="url-example" class="block bg-gray-800 dark:bg-gray-900 text-green-400 dark:text-green-300 p-2 pr-20 rounded text-xs break-all">${baseUrl}/get?s=peta&key=${apiKey}</code>
										<button onclick="window.copyText(document.getElementById('url-example').textContent, this)" class="absolute right-2 top-1/2 -translate-y-1/2 px-3 py-1 bg-blue-600 dark:bg-blue-500 text-white rounded text-xs hover:bg-blue-700 dark:hover:bg-blue-600">Copy</button>
									</div>
								</div>

								<!-- HTML Example -->
								<div>
									<p class="text-xs text-gray-600 dark:text-gray-400 mb-1">HTML:</p>
									<div class="relative">
										<code id="html-example" class="block bg-gray-800 dark:bg-gray-900 text-green-400 dark:text-green-300 p-2 pr-20 rounded text-xs break-all">&lt;img src="${baseUrl}/get?s=peta&key=${apiKey}" alt="Logo" /&gt;</code>
										<button onclick="window.copyHtml(document.getElementById('html-example'), this)" class="absolute right-2 top-1/2 -translate-y-1/2 px-3 py-1 bg-blue-600 dark:bg-blue-500 text-white rounded text-xs hover:bg-blue-700 dark:hover:bg-blue-600">Copy</button>
									</div>
								</div>
							</div>
						</div>
					`;
				}
			}

			// Copy to clipboard
			function copyToClipboard(text: string) {
				navigator.clipboard.writeText(text).then(() => {
					alert('API key copied to clipboard!');
				});
			}

			// Switch between URL and HTML format
			function switchFormat(format: string) {
				currentFormat = format;

				const urlBtn = document.getElementById('format-url');
				const htmlBtn = document.getElementById('format-html');
				const codes = document.querySelectorAll('#examples-container code');

				if (format === 'url') {
					urlBtn?.classList.add('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					urlBtn?.classList.remove('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
					htmlBtn?.classList.remove('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					htmlBtn?.classList.add('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');

					codes.forEach((code) => {
						const url = code.getAttribute('data-url');
						if (url) code.textContent = url;
					});
				} else {
					htmlBtn?.classList.add('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					htmlBtn?.classList.remove('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
					urlBtn?.classList.remove('bg-blue-600', 'dark:bg-blue-500', 'text-white');
					urlBtn?.classList.add('bg-gray-300', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');

					codes.forEach((code) => {
						const html = code.getAttribute('data-html');
						if (html) code.innerHTML = html;
					});
				}
			}

			// Copy code to clipboard
			function copyCode(button: HTMLButtonElement) {
				const codeEl = button.previousElementSibling as HTMLElement;
				const textToCopy = currentFormat === 'url'
					? codeEl.getAttribute('data-url')
					: codeEl.getAttribute('data-html');

				if (!textToCopy) return;

				navigator.clipboard.writeText(textToCopy).then(() => {
					const originalText = button.textContent;
					button.textContent = '‚úì Copied!';
					button.classList.add('bg-green-600', 'dark:bg-green-500');
					button.classList.remove('bg-blue-600', 'dark:bg-blue-500');

					setTimeout(() => {
						button.textContent = originalText;
						button.classList.remove('bg-green-600', 'dark:bg-green-500');
						button.classList.add('bg-blue-600', 'dark:bg-blue-500');
					}, 2000);
				});
			}

			// Logout handler
			document.getElementById('logout-btn')?.addEventListener('click', () => {
				// Clear cookie
				document.cookie = 'magic_link_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
				// Reload page
				window.location.reload();
			});


			// Send Magic Link Form Handler
			document.getElementById('request-key-form')?.addEventListener('submit', async (e) => {
				e.preventDefault();
				const form = e.target as HTMLFormElement;
				const emailInput = form.querySelector('#email') as HTMLInputElement;
				const messageDiv = document.getElementById('request-key-message');
				const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
				const submitText = document.getElementById('submit-text');
				const submitLoader = document.getElementById('submit-loader');
				const email = emailInput.value.trim();

				if (!email) {
					if (messageDiv) {
						messageDiv.textContent = 'Please enter an email address';
						messageDiv.className = 'mt-3 text-sm text-red-600 dark:text-red-400';
					}
					return;
				}

				// Show loader
				if (submitBtn) submitBtn.disabled = true;
				if (submitText) submitText.textContent = 'Sending...';
				if (submitLoader) submitLoader.classList.remove('hidden');
				if (messageDiv) messageDiv.textContent = '';

				try {
					const response = await fetch('/api/request-key', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({ email }),
					});

					const data = await response.json();

					if (response.ok) {
						// Hide form, show success message
						const formContainer = document.getElementById('magic-link-form-container');
						const successContainer = document.getElementById('success-message-container');
						const sentEmailEl = document.getElementById('sent-email');

						if (formContainer) formContainer.classList.add('hidden');
						if (successContainer) successContainer.classList.remove('hidden');
						if (sentEmailEl) sentEmailEl.textContent = email;

						form.reset();
					} else if (messageDiv) {
						messageDiv.textContent = data.error || 'Failed to send magic link';
						messageDiv.className = 'mt-3 text-sm text-red-600 dark:text-red-400';
					}
				} catch (error) {
					if (messageDiv) {
						messageDiv.textContent = 'An error occurred. Please try again.';
						messageDiv.className = 'mt-3 text-sm text-red-600 dark:text-red-400';
					}
				} finally {
					// Hide loader
					if (submitBtn) submitBtn.disabled = false;
					if (submitText) submitText.textContent = 'Send Magic Link';
					if (submitLoader) submitLoader.classList.add('hidden');
				}
			});


			// Check auth on page load
			checkAuth();
		</script>
	</body>
