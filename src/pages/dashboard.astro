---
// Dashboard page for API key management and statistics
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Logo CDN - Dashboard</title>
	</head>
	<body class="min-h-screen bg-gray-50">
		<!-- Navigation -->
		<nav class="bg-white shadow-sm border-b border-gray-200">
			<div class="container mx-auto px-4 py-4">
				<div class="flex items-center justify-between">
					<div class="flex items-center space-x-8">
						<a href="/" class="text-xl font-bold text-gray-900">Logo CDN</a>
						<div class="hidden md:flex space-x-4">
							<a href="/" class="px-3 py-2 text-gray-600 hover:text-gray-900">Home</a>
							<a href="/dashboard" class="px-3 py-2 text-gray-700 hover:text-gray-900 font-medium">Dashboard</a>
							<a href="/docs" class="px-3 py-2 text-gray-600 hover:text-gray-900">Documentation</a>
						</div>
					</div>
					<a
						href="/dashboard"
						class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors"
					>
						Get Started
					</a>
				</div>
			</div>
		</nav>

		<div class="container mx-auto px-4 py-8 max-w-4xl">
			<header class="mb-8">
				<h1 class="text-4xl font-bold text-gray-900 mb-2">Logo CDN Dashboard</h1>
				<p class="text-gray-600" id="subtitle">Get your API key via magic link</p>
			</header>

			<!-- Loading State -->
			<div id="loading" class="text-center py-8">
				<div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
				<p class="mt-2 text-gray-600">Loading...</p>
			</div>

			<!-- Authenticated View (API Keys) -->
			<div id="authenticated-view" class="hidden">
				<div class="bg-white rounded-lg shadow-md p-6 mb-6">
					<div class="flex justify-between items-center mb-4">
						<h2 class="text-2xl font-semibold text-gray-800">Your API Keys</h2>
						<button id="logout-btn" class="text-sm text-red-600 hover:text-red-800">Logout</button>
					</div>
					<p class="text-gray-600 mb-4" id="user-email"></p>
					<div id="api-keys-list" class="space-y-4"></div>
				</div>
			</div>

			<!-- Unauthenticated View (Send Magic Link) -->
			<div id="unauthenticated-view" class="hidden">
				<div class="bg-white rounded-lg shadow-md p-6">
					<h2 class="text-2xl font-semibold text-gray-800 mb-4">Get API Key</h2>
					
					<div>
						<h3 class="text-lg font-medium text-gray-700 mb-3">Send Magic Link</h3>
						<form id="request-key-form" class="space-y-4">
							<div>
								<label for="email" class="block text-sm font-medium text-gray-700 mb-1">
									Email Address
								</label>
								<input
									type="email"
									id="email"
									name="email"
									required
									class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
									placeholder="your@email.com"
								/>
							</div>
							<button
								type="submit"
								class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors"
							>
								Send Magic Link
							</button>
						</form>
						<div id="request-key-message" class="mt-3 text-sm"></div>
					</div>
				</div>
			</div>
		</div>

		<script>
			// Check authentication status on page load
			async function checkAuth() {
				const loading = document.getElementById('loading');
				const authenticatedView = document.getElementById('authenticated-view');
				const unauthenticatedView = document.getElementById('unauthenticated-view');
				const subtitle = document.getElementById('subtitle');

				try {
					const response = await fetch('/api/dashboard-data', {
						credentials: 'include'
					});
					const data = await response.json();

					if (loading) loading.classList.add('hidden');

					if (data.authenticated && data.apiKeys) {
						// Show authenticated view
						if (authenticatedView) authenticatedView.classList.remove('hidden');
						if (unauthenticatedView) unauthenticatedView.classList.add('hidden');
						if (subtitle) subtitle.textContent = `Welcome back!`;

						// Set email
						const emailEl = document.getElementById('user-email');
						if (emailEl) emailEl.textContent = `Email: ${data.email}`;

						// Render API keys
						renderApiKeys(data.apiKeys, data.statistics);
					} else {
						// Show unauthenticated view
						if (authenticatedView) authenticatedView.classList.add('hidden');
						if (unauthenticatedView) unauthenticatedView.classList.remove('hidden');
					}
				} catch (error) {
					console.error('Auth check error:', error);
					if (loading) loading.classList.add('hidden');
					if (authenticatedView) authenticatedView.classList.add('hidden');
					if (unauthenticatedView) unauthenticatedView.classList.remove('hidden');
				}
			}

			// Render API keys
			function renderApiKeys(apiKeys: any[], statistics: Record<string, any>) {
				const apiKeysList = document.getElementById('api-keys-list');
				if (!apiKeysList) return;

				apiKeysList.innerHTML = apiKeys.map((keyData) => {
					const stats = statistics[keyData.key] || {};
					const createdAt = new Date(keyData.createdAt).toLocaleDateString('tr-TR');
					const lastUsed = keyData.lastUsed ? new Date(keyData.lastUsed).toLocaleDateString('tr-TR') : 'Never';
					
					return `
						<div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
							<div class="mb-3">
								<h3 class="text-lg font-semibold text-gray-800 mb-2">API Key</h3>
								<div class="bg-white p-3 rounded-md font-mono text-sm break-all border border-gray-300">
									${keyData.key}
								</div>
								<button 
									onclick="copyToClipboard('${keyData.key}')" 
									class="mt-2 text-sm text-blue-600 hover:text-blue-800"
								>
									ðŸ“‹ Copy to Clipboard
								</button>
							</div>
							<div class="grid grid-cols-2 gap-4">
								<div>
									<p class="text-sm text-gray-600">Created</p>
									<p class="font-medium">${createdAt}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600">Last Used</p>
									<p class="font-medium">${lastUsed}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600">Today's Requests</p>
									<p class="font-medium">${stats.todayRequests || 0}</p>
								</div>
								<div>
									<p class="text-sm text-gray-600">Total Requests</p>
									<p class="font-medium">${stats.totalRequests || 0}</p>
								</div>
							</div>
						</div>
					`;
				}).join('');

				// Add usage example
				if (apiKeys.length > 0) {
					apiKeysList.innerHTML += `
						<div class="mt-4 bg-blue-50 border border-blue-200 rounded-lg p-6">
							<h3 class="text-xl font-semibold text-gray-800 mb-3">Usage Example</h3>
							<pre class="bg-gray-800 text-green-400 p-4 rounded overflow-x-auto text-sm"><code>&lt;img src="https://logo.alisait.com/shopify.com?key=${apiKeys[0]?.key || 'YOUR_API_KEY'}&format=png" alt="Shopify logo" /&gt;</code></pre>
						</div>
					`;
				}
			}

			// Copy to clipboard
			function copyToClipboard(text: string) {
				navigator.clipboard.writeText(text).then(() => {
					alert('API key copied to clipboard!');
				});
			}

			// Logout handler
			document.getElementById('logout-btn')?.addEventListener('click', () => {
				// Clear cookie
				document.cookie = 'magic_link_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
				// Reload page
				window.location.reload();
			});

			// Send Magic Link Form Handler
			document.getElementById('request-key-form')?.addEventListener('submit', async (e) => {
				e.preventDefault();
				const form = e.target as HTMLFormElement;
				const emailInput = form.querySelector('#email') as HTMLInputElement;
				const messageDiv = document.getElementById('request-key-message');
				const email = emailInput.value.trim();

				if (!email) {
					if (messageDiv) {
						messageDiv.textContent = 'Please enter an email address';
						messageDiv.className = 'mt-3 text-sm text-red-600';
					}
					return;
				}

				try {
					const response = await fetch('/api/request-key', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({ email }),
					});

					const data = await response.json();

					if (response.ok && messageDiv) {
						messageDiv.textContent = data.message || 'Magic link sent! Check your email.';
						messageDiv.className = 'mt-3 text-sm text-green-600';
						form.reset();
					} else if (messageDiv) {
						messageDiv.textContent = data.error || 'Failed to send magic link';
						messageDiv.className = 'mt-3 text-sm text-red-600';
					}
				} catch (error) {
					if (messageDiv) {
						messageDiv.textContent = 'An error occurred. Please try again.';
						messageDiv.className = 'mt-3 text-sm text-red-600';
					}
				}
			});

			// Check auth on page load
			checkAuth();
		</script>
	</body>
</html>

